<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="ImageFanReloaded.Controls.FullScreenImageWindow"
		Icon="/MainWindowIcon.ico"
		WindowStartupLocation="CenterScreen"
		WindowState="FullScreen"
		Background="Black"
		Focusable="True"
		Closing="OnWindowClosing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ScrollViewer Name="_imageScrollViewer"
					  Grid.Row="0"
					  HorizontalScrollBarVisibility="Hidden"
					  VerticalScrollBarVisibility="Hidden"
					  PointerPressed="OnMouseDown"
					  PointerReleased="OnMouseUp">
			<Image Name="_displayImage"
				   Stretch="None"/>
		</ScrollViewer>
		<Canvas Grid.Row="0">
			<SelectableTextBlock Name="_imageInfoTextBox"
								 Canvas.Bottom="0"
								 Canvas.Right="0"
								 Background="Transparent"
								 Foreground="Lime"
								 FontWeight="Bold"
								 TextAlignment="Right"
								 IsVisible="False"/>
		</Canvas>
	</Grid>
</Window>
