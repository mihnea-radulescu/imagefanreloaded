<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ImageFanReloaded.Controls.TabOptionsWindow"
        Icon="/MainWindowIcon.ico"
        Title="Tab options"
        Width="600"
        Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Focusable="True"
        Closing="OnWindowClosing">
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="13*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="13*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="13*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="13*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="14*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="13*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*"/>
			<ColumnDefinition Width="38*"/>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="50*"/>
			<ColumnDefinition Width="5*"/>
		</Grid.ColumnDefinitions>
		
		<TextBlock Grid.Row="1"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Folder ordering:"
		           Margin="0 6 0 0"/>
		<ComboBox Name="_folderOrderingComboBox"
		          Grid.Row="1"
		          Grid.Column="3"
		          HorizontalAlignment="Stretch"
		          VerticalContentAlignment="Center"/>
		
		<TextBlock Grid.Row="3"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Thumbnail size:"
		           Margin="0 6 0 0"/>
		<ComboBox Name="_thumbnailSizeComboBox"
		          Grid.Row="3"
		          Grid.Column="3"
		          HorizontalAlignment="Stretch"
		          VerticalContentAlignment="Center"/>
		
		<TextBlock Grid.Row="5"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Recursive folder browsing?"
		           Margin="0 10 0 0"/>
		<CheckBox Name="_recursiveFolderBrowsingCheckBox"
		          Grid.Row="5"
		          Grid.Column="3"/>
		
		<TextBlock Grid.Row="7"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Show image info in image view?"
		           Margin="0 10 0 0"/>
		<CheckBox Name="_showImageViewImageInfoCheckBox"
		          Grid.Row="7"
		          Grid.Column="3"/>

		<TextBlock Grid.Row="9"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Panels splitting ratio:"
		           Margin="0 16 0 0"/>
		<Slider Name="_panelsSplittingRatioSlider"
		        Minimum="0"
		        Maximum="100"
		        Grid.Row="9"
		        Grid.Column="3"/>

		<TextBlock Grid.Row="11"
		           Grid.Column="1"
		           HorizontalAlignment="Right"
		           Text="Save as default?"
		           Margin="0 10 0 0"/>
		<CheckBox Name="_saveAsDefaultCheckBox"
		          Grid.Row="11"
		          Grid.Column="3"/>
	</Grid>
</Window>
