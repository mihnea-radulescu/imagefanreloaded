<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="ImageFanReloaded.Controls.ContentTabItemHeader"
			 ToolTip.ShowDelay="500"
			 Loaded="OnLoaded">
	<ToolTip.Tip>
		<TextBlock Name="_textBlockTabTooltip"/>
	</ToolTip.Tip>
	<StackPanel Orientation="Horizontal"
				Margin="4"
				Spacing="8">
		<TextBlock Name="_textBlockTabTitle"
				   VerticalAlignment="Center"/>

		<Border Name="_borderTabClose"
				CornerRadius="50"
				Width="20"
				Height="20"
				Margin="0 2 0 0"
				Background="#0087bd"
				BorderThickness="1.5"
				PointerPressed="OnTabClose">
			<TextBlock Text="âœ•"
					   TextAlignment="Center"
					   VerticalAlignment="Center"/>
		</Border>
		
	</StackPanel>
</UserControl>
