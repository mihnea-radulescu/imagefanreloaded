<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="ImageFanReloaded.Controls.ThumbnailCacheOptionsWindow"
		Icon="/MainWindowIcon.ico"
		Title="Thumbnail cache options"
		Width="300"
		Height="125"
		WindowStartupLocation="CenterOwner"
		CanMinimize="False"
		CanResize="False"
		CanMaximize="False"
		Closing="OnWindowClosing">
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="3*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="62*"/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="33*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="1"
				   Grid.Column="1"
				   HorizontalAlignment="Right"
				   Text="Enable thumbnail caching?"
				   Margin="0 6 0 0"/>
		<CheckBox Name="_enableThumbnailCachingCheckBox"
				  Grid.Row="1"
				  Grid.Column="3"/>

		<TextBlock Grid.Row="3"
				   Grid.Column="1"
				   HorizontalAlignment="Right"
				   Text="Thumbnail cache size:"/>
		<TextBlock Name="_thumbnailCacheSizeInMegabytesTextBlock"
				   Grid.Row="3"
				   Grid.Column="3"/>

		<Button Name="_clearThumbnailCacheButton"
				Grid.Row="4"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				HorizontalAlignment="Center">
			Clear thumbnail cache
		</Button>
	</Grid>
</Window>
