<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ImageFanReloaded.Controls.ContentTabItem">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<DockPanel Grid.Row="0"
				   HorizontalAlignment="Right">
			<Button Name="_slideshowButton"
					BorderThickness="0"
					CornerRadius="5"
					Margin="0 0 4 8"
					Content="Slideshow"
					Click="OnSlideshowButtonClicked"/>

			<Button Name="_imageInfoButton"
					BorderThickness="0"
					CornerRadius="5"
					Margin="4 0 4 8"
					Content="Image info"
					Click="OnImageInfoButtonClicked"/>

			<Button Name="_optionsButton"
					BorderThickness="0"
					CornerRadius="5"
					Margin="4 0 4 8"
					Content="Tab options"
					Click="OnTabOptionsButtonClicked"/>

			<Button Name="_aboutButton"
					BorderThickness="0"
					CornerRadius="5"
					Margin="4 0 0 8"
					Content="About"
					Click="OnAboutButtonClicked"/>
		</DockPanel>
		<Grid Name="_contentGrid" Grid.Row="1">
			<TreeView Name="_folderTreeView"
					  Grid.Column="0"
					  SelectionMode="Single"/>

			<GridSplitter Name="_gridSplitter"
						  Grid.Column="1"
						  Width="5"
						  Background="#FFBCBCBC"
						  IsEnabled="False"/>

			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<ScrollViewer Name="_thumbnailScrollViewer"
							  Grid.Row="0"
							  VerticalScrollBarVisibility="Auto"
							  Focusable="True">
					<WrapPanel Name="_thumbnailWrapPanel"
							   Orientation="Horizontal"
							   Margin="4 0 4 0"/>
				</ScrollViewer>

				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<TextBox Name="_textBoxFolderInfo"
							Grid.Column="0"
							IsReadOnly="True"
							Background="Transparent"
							BorderThickness="0"
							TextAlignment="Left"/>
					<TextBox Name="_textBoxImageInfo"
							Grid.Column="1"
							IsReadOnly="True"
							Background="Transparent"
							BorderThickness="0"
							TextAlignment="Right"/>
				</Grid>

			</Grid>
		</Grid>
	</Grid>
</UserControl>
