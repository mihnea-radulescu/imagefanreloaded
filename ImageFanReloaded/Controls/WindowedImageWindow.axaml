<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="ImageFanReloaded.Controls.WindowedImageWindow"
		Icon="/MainWindowIcon.ico"
		MinWidth="400"
		MinHeight="300"
		WindowStartupLocation="CenterScreen"
		Background="Black"
		PointerPressed="OnMouseDown"
		PointerReleased="OnMouseUp"
		Closing="OnWindowClosing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Image Name="_displayImage"
		       Grid.Row="0"
		       Stretch="Uniform"/>

		<Canvas Grid.Row="0">
			<SelectableTextBlock Name="_imageInfoSelectableTextBlock"
			                     Canvas.Bottom="0"
			                     Canvas.Right="0"
			                     Background="Transparent"
			                     Foreground="Lime"
			                     FontWeight="Bold"
			                     TextAlignment="Right"
			                     IsVisible="False"/>
		</Canvas>
	</Grid>
</Window>
