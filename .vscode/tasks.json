				"publish",
				"${workspaceFolder}/ImageFanReloaded/ImageFanReloaded.csproj",
				"--output",
				"${workspaceFolder}/publish/linux-arm64",
				"-p:PublishReadyToRun=true",
				"-p:PublishSingleFile=true",
				"-p:PublishTrimmed=true",
